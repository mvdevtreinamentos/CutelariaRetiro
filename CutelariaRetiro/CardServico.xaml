             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CutelariaRetiro"
             mc:Ignorable="d" 
             Background="WhiteSmoke" d:DesignWidth="344" Height="66">
