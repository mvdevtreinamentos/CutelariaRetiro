        <TextBlock x:Name="lbCliente" Margin="72,6,92,0" TextWrapping="Wrap" Text="JOSÉ DA COSTA FILHO" VerticalAlignment="Top"/>
        <TextBlock x:Name="lbValor" TextAlignment="Right" Margin="0,6,10,0" TextWrapping="Wrap" Text="R$ 7,00" VerticalAlignment="Top" HorizontalAlignment="Right" Width="77" FontWeight="Bold"/>
        <Label x:Name="lbObs" Content="Label" Margin="10,27,92,0" VerticalAlignment="Top" Height="33" Padding="0"/>
        <Button x:Name="btEditar" Content="Editar" HorizontalAlignment="Right" Margin="0,0,10,7" VerticalAlignment="Bottom" Width="77" Height="22" Style="{DynamicResource btNormal}" Click="btEditar_Click"/>

    </Grid>
</UserControl>
